{
  "name": "turso-crm",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix build",
    "dev": "remix dev --manual",
    "start": "remix-serve ./build/index.js",
    "typecheck": "tsc",
    "drizzle:migrate": "tsx drizzle/migrate",
    "drizzle:generate": "drizzle-kit generate:sqlite --out ./drizzle/migrations --breakpoints --schema=./drizzle/schema.ts",
    "drizzle:generate:orgs": "drizzle-kit generate:sqlite --out ./drizzle/migrations-orgs --breakpoints --schema=./drizzle/org-schema.ts",
    "drizzle:studio": "drizzle-kit studio --port 3333",
    "start-replicas": "mkdir -p databases && curl http://localhost:3000/create-main-replicas"
  },
  "dependencies": {
    "@libsql/client": "^0.3.6",
    "@remix-run/css-bundle": "^2.3.0",
    "@remix-run/node": "^2.3.0",
    "@remix-run/react": "^2.3.0",
    "@remix-run/serve": "^2.3.0",
    "@vercel/remix": "^2.2.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.28.6",
    "isbot": "^3.7.1",
    "libsql": "0.1.34",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "resend": "^1.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.3.0",
    "@remix-run/eslint-config": "^2.3.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.9.3",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.16",
    "@types/uuid": "^9.0.7",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "drizzle-kit": "^0.19.13",
    "eslint": "^8.54.0",
    "tailwindcss": "^3.3.5",
    "tsx": "^3.14.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
